<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#121533</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="ManualTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">90dp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#121533</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum_bareun_font</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/nanum_bareun_font</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanum_bareun_font</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#121533</item>
    </style>

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">25dp</item>
        <item name="ttlm_strokeColor">@color/colorMain</item>
        <item name="ttlm_backgroundColor">#FFFFFF</item>
        <item name="ttlm_strokeWeight">1dp</item>
        <item name="ttlm_cornerRadius">10dp</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">@style/ToolTipTextStyle</item>
    </style>

    <style name="ToolTipTextStyle">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">#ffffff</item>
        <item name="ttlm_repeatCount">1</item>
        <item name="ttlm_duration">500</item>
        <item name="android:alpha">0.2</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>
