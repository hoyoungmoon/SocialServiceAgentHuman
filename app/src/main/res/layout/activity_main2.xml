<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorMainBright"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="60dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07" />


        <ImageView
            android:id="@+id/navigation_drawer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:src="@drawable/ic_dehaze_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/guideLine3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/calculator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="2dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_calculator_white_24dp"
            app:layout_constraintBottom_toTopOf="@+id/guideLine3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorMainBright"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toTopOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideLine3"
            app:layout_constraintVertical_weight="1.2">

            <LinearLayout
                android:id="@+id/linearUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxWidth="140dp"
                    android:singleLine="true"
                    android:text="공익인간"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/seperate_view"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/tv_nickName"
                    android:background="@color/colorMain" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="7dp"
                    android:clickable="true"
                    android:onClick="onClickToolTip"
                    android:text="이병"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_rank_info"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:onClick="onClickToolTip"
                    android:src="@drawable/ic_info_outline_white_24dp" />

                <TextView
                    android:id="@+id/tv_dDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="D-400"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_servicePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearUserInfo"
                android:layout_marginBottom="5dp"
                android:text="2019-04-18 ~ 2021-02-09" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressBar"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체복무일 | " />

                    <TextView
                        android:id="@+id/tv_entireService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="580일" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재복무일 | " />

                    <TextView
                        android:id="@+id/tv_currentService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180일" />
                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/tv_servicePeriod"
                android:progress="30"
                android:progressDrawable="@drawable/progress_bar" />

            <TextView
                android:id="@+id/progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_marginTop="4dp"
                android:text="30.000%"
                android:textColor="#FCC15B"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"
                        android:text="1년차"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="13일"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"
                        android:text="2년차"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="12일"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"
                        android:text="병가"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="27.5일"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#f6f6f6"
            app:layout_constraintBottom_toTopOf="@+id/spendVacCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RelativeLayout1" />

        <LinearLayout
            android:id="@+id/spendVacCardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/card_view_bg"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintVertical_weight="0.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <ImageView
                    android:id="@+id/iv_search_previous_period"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:clickable="true"
                    android:src="@drawable/ic_navigation_before_selector" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/search_period_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true">

                        <TextView
                            android:id="@+id/tv_search_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="이번달 급여"
                            android:textColor="#9B9A9A"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/btn_pay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_alignParentEnd="true"
                            android:clickable="true"
                            android:onClick="onClickToolTip"
                            android:src="@drawable/ic_info_outline_white_24dp" />

                        <TextSwitcher
                            android:id="@+id/ts_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_search_period"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="70dp"
                            android:onClick="onClickToolTip">

                        </TextSwitcher>
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_search_next_period"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:clickable="true"
                    android:src="@drawable/ic_navigation_next_selector" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/section_left"
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"
                        android:text="외출"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/thisMonthOuting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="0일"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/section_center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"
                        android:text="연 / 반가 / 기타"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/thisMonthVac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="0일"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/section_right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"
                        android:text="병가"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/thisMonthSickVac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="0일"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f6f6f6"
            app:layout_constraintBottom_toTopOf="@+id/ConstraintLayout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spendVacCardView" />

        <FrameLayout
            android:id="@+id/ConstraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/card_view_bg"
            app:layout_constraintBottom_toTopOf="@id/guideLine2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintVertical_weight="2.5">

            <LinearLayout
                android:id="@+id/slide_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/vacTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:id="@+id/vacCardView_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp">

                        <RelativeLayout
                            android:id="@+id/rotate_container1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/first_vacation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="1년차 연가"
                                android:textColor="#adadad"
                                android:visibility="gone"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/first_vacation_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_toEndOf="@+id/first_vacation_title"
                                android:src="@drawable/ic_expand_more_black_24dp"
                                android:visibility="gone"
                                android:tint="#3B4357" />

                            <TextView
                                android:id="@+id/first_vacation_remain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/first_vacation_title"
                                android:text="15일"
                                android:textSize="19sp" />

                            <TextView
                                android:id="@+id/first_vacation_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/first_vacation_remain"
                                android:layout_toRightOf="@+id/first_vacation_remain"
                                android:text="/15"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/spendButton_1"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/spend_button_bg"
                            android:text="사용"
                            android:textColor="@color/colorMain"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#E9E6E6" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vacCardView_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp">

                        <RelativeLayout
                            android:id="@+id/rotate_container2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/second_vacation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="2년차 연가"
                                android:textColor="#adadad"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/second_vacation_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_toRightOf="@+id/second_vacation_title"
                                android:src="@drawable/ic_expand_more_black_24dp"
                                android:tint="#3B4357" />

                            <TextView
                                android:id="@+id/second_vacation_remain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/second_vacation_title"
                                android:layout_marginTop="8dp"
                                android:text="15일"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/second_vacation_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/second_vacation_remain"
                                android:layout_toRightOf="@+id/second_vacation_remain"
                                android:text="/15"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <Button
                            android:id="@+id/spendButton_2"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/spend_button_bg"
                            android:text="사용"
                            android:textColor="@color/colorMain"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#E9E6E6" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vacCardView_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp">

                        <RelativeLayout
                            android:id="@+id/rotate_container3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sick_vacation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="병가"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/sick_vacation_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_toRightOf="@+id/sick_vacation_title"
                                android:src="@drawable/ic_expand_more_black_24dp"
                                android:tint="#3B4357" />

                            <TextView
                                android:id="@+id/sick_vacation_remain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/sick_vacation_title"
                                android:layout_marginTop="8dp"
                                android:text="15일"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/sick_vacation_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/sick_vacation_remain"
                                android:layout_toRightOf="@+id/sick_vacation_remain"
                                android:text="/15"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/spendButton_3"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/spend_button_bg"
                            android:text="사용"
                            android:textColor="@color/colorMain"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#E9E6E6" />
                    </RelativeLayout>
                </LinearLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vacListViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical" />
            </LinearLayout>
        </FrameLayout>

        <com.kakao.adfit.ads.ba.BannerAdView
            android:id="@+id/banner_ad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>





