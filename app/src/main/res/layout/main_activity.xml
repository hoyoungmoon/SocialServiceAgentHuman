<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Main_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="60dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toTopOf="@id/guideLine1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/navigation_drawer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dehaze_black_24dp"
                app:layout_constraintBottom_toTopOf="@+id/LinearLayout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/payCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navigation_drawer_button">

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Alleyoops"
                    android:textColor="@color/colorMain"
                    android:textSize="22sp"/>

                <ImageView
                    android:id="@+id/btn_rank_info"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_toRightOf="@+id/tv_nickName"
                    android:onClick="toolTipRank"
                    android:src="@drawable/ic_info_outline_black_24dp" />

                <TextView
                    android:id="@+id/tv_dDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="D-365"
                    android:textColor="@color/colorMain"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_servicePeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nickName"
                    android:layout_marginBottom="6dp"
                    android:text="2019-04-18 ~ 2021-02-09" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:layout_below="@+id/tv_servicePeriod"
                    android:progress="30"
                    android:progressDrawable="@drawable/progress_bar" />

                <TextView
                    android:id="@+id/progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressBar"
                    android:layout_marginTop="3dp"
                    android:text="30.000%"
                    android:textSize="12dp" />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/payCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toTopOf="@+id/spendVacCardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/LinearLayout1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp">

                    <ImageView
                        android:id="@+id/iv_search_previous_period"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:src="@drawable/ic_navigate_before_black_24dp"
                        android:tint="#a3aaab" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_search_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="이번달 급여"
                                android:textSize="13sp" />

                            <ImageView
                                android:id="@+id/btn_pay_info"
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_alignParentRight="true"
                                android:clickable="true"
                                android:onClick="toolTipRank"
                                android:src="@drawable/ic_info_outline_black_24dp" />

                            <TextView
                                android:id="@+id/tv_salary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_search_period"
                                android:text="468,000 KRW"
                                android:textColor="@color/colorMain"
                                android:textSize="22sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_search_next_period"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:tint="#a3aaab" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/spendVacCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="해당 기간 휴가 사용"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/button_bg"
                                android:gravity="center"
                                android:text="외출"
                                android:textColor="#404855"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/thisMonthOuting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="30분"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="#D1CECE" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/button_bg_2"
                                android:gravity="center"
                                android:text="연 반가"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/thisMonthVac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1.5일"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="#D1CECE" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/button_bg"
                                android:gravity="center"
                                android:text="병가"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/thisMonthSickVac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0일"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toTopOf="@id/guideLine2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ConstraintLayout1">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:text="나의 휴가 상태"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/vacCardView_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="15dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:id="@+id/first_vacation_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1년차 연가"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />
                                <ImageView
                                    android:id="@+id/first_vacation_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/first_vacation_title"
                                    android:src="@drawable/ic_expand_more"
                                    android:tint="#3B4357" />
                                <TextView
                                    android:id="@+id/first_vacation_remain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/first_vacation_title"
                                    android:layout_marginTop="8dp"
                                    android:text="14일"
                                    android:textColor="@color/colorMain"
                                    android:textSize="22sp" />
                                <TextView
                                    android:id="@+id/first_vacation_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/first_vacation_remain"
                                    android:layout_alignBottom="@+id/first_vacation_remain"
                                    android:text="/15"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <Button
                                android:id="@+id/spendButton_1"
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/spend_button_bg"
                                android:text="휴가사용"
                                android:textColor="#ffffff"
                                android:textSize="13sp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#D1CECE"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vacCardView_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:id="@+id/second_vacation_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2년차 연가"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />
                                <ImageView
                                    android:id="@+id/second_vacation_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/second_vacation_title"
                                    android:src="@drawable/ic_expand_more"
                                    android:tint="#3B4357" />
                                <TextView
                                    android:id="@+id/second_vacation_remain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/second_vacation_title"
                                    android:layout_marginTop="8dp"
                                    android:text="14일"
                                    android:textColor="@color/colorMain"
                                    android:textSize="22sp" />
                                <TextView
                                    android:id="@+id/second_vacation_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/second_vacation_remain"
                                    android:layout_alignBottom="@+id/second_vacation_remain"
                                    android:text="/15"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <Button
                                android:id="@+id/spendButton_2"
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/spend_button_bg"
                                android:text="휴가사용"
                                android:textColor="#ffffff"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#D1CECE"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/vacCardView_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:paddingTop="15dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/sick_vacation_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="병가"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />
                                <ImageView
                                    android:id="@+id/sick_vacation_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/sick_vacation_title"
                                    android:src="@drawable/ic_expand_more"
                                    android:tint="#3B4357" />
                                <TextView
                                    android:id="@+id/sick_vacation_remain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/sick_vacation_title"
                                    android:layout_marginTop="8dp"
                                    android:text="14일"
                                    android:textColor="@color/colorMain"
                                    android:textSize="22sp" />
                                <TextView
                                    android:id="@+id/sick_vacation_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/sick_vacation_remain"
                                    android:layout_alignBottom="@+id/sick_vacation_remain"
                                    android:text="/15"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <Button
                                android:id="@+id/spendButton_3"
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/spend_button_bg"
                                android:text="휴가사용"
                                android:textColor="#ffffff"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#D1CECE"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_container_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:orientation="vertical">
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_navigation_menu" />


</androidx.drawerlayout.widget.DrawerLayout>





