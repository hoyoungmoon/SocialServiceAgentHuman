<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Main_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/navigation_drawer_button"
            android:src="@drawable/ic_dehaze_black_24dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/tv_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alleyoops"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
            <ImageView
                android:id="@+id/btn_rank_info"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:onClick="toolTipRank"/>
            <TextView
                android:id="@+id/tv_dDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="D-365"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_servicePeriod"
            android:text="2019-04-18 ~ 2021-02-09"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:progress="25"/>

    <TextView
        android:id="@+id/progress_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        android:textColor="#ffffff"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:rowCount="3"
            android:columnCount="1">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#0FFFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_search_previous_period"
                        android:src="@drawable/ic_navigate_before_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:tint="#a3aaab"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_search_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="이번달 급여"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/tv_salary"
                            android:text="468,000 KRW"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_search_next_period"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:tint="#a3aaab"/>
                    <ImageView
                        android:id="@+id/btn_pay_info"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="toolTipRank"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="해당 기간 휴가 사용"
                        android:textSize="12sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="외출"
                                android:background="@drawable/button_bg"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="#404855"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/thisMonthOuting"
                                android:text="30분"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="#D1CECE"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="연 반가"
                                android:background="@drawable/button_bg_2"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/thisMonthVac"
                                android:text="1.5일"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="#D1CECE"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="병가"
                                android:background="@drawable/button_bg"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/thisMonthSickVac"
                                android:text="0일"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 휴가 상태"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:orientation="horizontal"
                android:rowCount="3">

                <androidx.cardview.widget.CardView
                    android:id="@+id/vacCardView_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="6dp">

                        <LinearLayout
                            android:id="@+id/listButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/first_vacation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1년차 연가"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/first_vacation_image"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_expand_more"
                                android:tint="#3B4357" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/first_vacation_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 남은 일수"
                                    android:textSize="11sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp">

                                    <TextView
                                        android:id="@+id/first_vacation_remain"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="14일"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/first_vacation_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/15"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <Button
                                android:id="@+id/spendButton"
                                android:background="@drawable/spend_button_bg"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:text="휴가사용"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/fragment_container_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/vacCardView_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="6dp">

                        <LinearLayout
                            android:id="@+id/listButton_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/second_vacation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2년차 연가"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/second_vacation_image"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_expand_more"
                                android:tint="#3B4357" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/second_vacation_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 남은 일수"
                                    android:textSize="11sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp">

                                    <TextView
                                        android:id="@+id/second_vacation_remain"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="14일"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/second_vacation_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/15"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/spendButton_2"
                                android:background="@drawable/spend_button_bg"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:text="휴가사용"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/fragment_container_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/vacCardView_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="6dp">

                        <LinearLayout
                            android:id="@+id/listButton_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sick_vacation_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="병가"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/sick_vacation_image"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_expand_more"
                                android:tint="#3B4357" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sick_vacation_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 남은 일수"
                                    android:textSize="11sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp">
                                    <TextView
                                        android:id="@+id/sick_vacation_remain"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="14일"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/sick_vacation_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/15"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/spendButton_3"
                                android:background="@drawable/spend_button_bg"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:text="휴가사용"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/fragment_container_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </GridLayout>
        </ScrollView>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_navigation_menu"/>


</androidx.drawerlayout.widget.DrawerLayout>