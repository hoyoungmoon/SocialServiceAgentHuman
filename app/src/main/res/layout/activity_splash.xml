<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/splash_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_splash_foreground"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/splash_image"
            android:layout_centerHorizontal="true"
            android:text="공익인간"
            android:textColor="@color/colorMainDark"
            android:textSize="21sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:text="ver 2.0"
        android:textColor="@color/colorMainDark"
        android:layout_toEndOf="@+id/splash_linear"
        android:layout_alignBottom="@+id/splash_linear"/>

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="해당 앱은 행정효력이 없습니다"
        android:textColor="@color/colorMainDark"
        android:textSize="12sp"/>
</RelativeLayout>